                                </svg>
                                <span class="sr-only">Loading...</span>
                            </div>
                            <div>加载中...</div>
                        </div>
                    }
                </Footer>
        </CollectionView>
    </RefreshView>
}


@code {
    [Inject]
    private ApiService ApiService { get; set; } = null!;

    [Inject]
    private IToastService Toast { get; set; } = null!;

    private FavoriteTopicsPageViewModel? viewModel;

    protected override Task OnInitializedAsync()
    {
        return this.LoadAsync(1);
    }

    private async Task OnRefreshAsync()
    {
        viewModel = null;
        await this.LoadAsync(1);

        await this.Toast.Show("刷新成功");
    }

    private async Task LoadAsync(int page)
    {
        var info = await this.ApiService.GetFollowingInfo(page);

        if (info == null)
        {
            return;
        }

        var items = info.Items.Select(o => new TopicViewModel(
        "",
        "",
        new MarkupString(o.TopicTitle),
        o.TopicLink,
        o.Avatar,
        o.UserLink,
        o.UserName,
        o.UserLink,
        o.Created,
        o.CreatedText,
        o.LastReplyUserName,
        o.NodeName,
        o.NodeLink,
        o.Replies
        )).ToList();

        viewModel = new FavoriteTopicsPageViewModel(
        info.CurrentPage,
        info.MaximumPage,
        viewModel == null ? items : [.. viewModel.Topics, .. items]
        );
    }

    private async Task OnRemainingReached()
    {
        if (viewModel == null)
        {
            return;
        }

        if (viewModel.CurrentPage >= viewModel.MaximumPage)
        {
            return;
        }
        await this.LoadAsync(viewModel.CurrentPage + 1);
    }
}
